<nav class="navbar navbar-inverse">
	<div class="container-fluid">
		<div class="navbar-header">
		    <a class="navbar-brand" href="/">Tech Scraper</a>
		    <a href="/scrape" class="btn btn-warning">SCRAPE NEW ARTICLES!</a>
		</div>
      	
	</div>
</nav>

<div class="container">
	<div class="jumbotron text-center">
	  	<div class="caption">
	    	<h1>Tech Scraper</h1>
	    	<p>Technology Articles</p>
	  	</div>
	</div>
</div>

<div class="container">
	{{#each articles}}
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3> 
					<a class="article-link" target="_blank" href="{{this.link}}">{{this.title}}</a>
				</h3>
			</div>
			<div class="panel-body">
				<p>{{this.summary}}</p>
				
				<div class="input-group">
				  	<div class="input-group-btn">
				  		<span class="input-group-addon">Notes</span>
				    	<span class="input-group-addon counter">{{this.note.length}}</span>
				    	<span class="input-group-btn"><button type="button" class="btn btn-success btn-add-note" data-article-id="{{this._id}}">Add</button></span>
				  	</div>
				</div>
			</div>
		</div>
	{{/each}}
</div>

<div class="modal fade in" tabindex="-1" role="dialog" id="modal-note">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<!-- Header -->
            <div class="modal-header">
            	<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Add Note</h4>
            </div>

			<div class="modal-body">

				<ul class="list-group" id="note-container">
					
				</ul> 

				<textarea placeholder="New Note" rows="4" cols="60"></textarea>
				
			</div>
			<div class="modal-footer">
		        <button type="button" class="btn btn-success" id="btn-save-note">Save</button>
		        <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
		    </div>
		</div>
	</div>
</div>